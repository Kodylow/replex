{
  "manifest_version": 3,
  "name": "repl-ex",
  "version": "1.0",
  "description": "A Bitcoin Wallet for Replit Users",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "repl-ex.ico",
      "48": "repl-ex.ico",
      "128": "repl-ex.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://replit.com/*",
    "https://replex.replit.app/*",
    "https://d41388c1-73da-437f-b0b7-62f215a91554-00-3577uk1dqrjza.picard.replit.dev/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "repl-ex.ico",
    "48": "repl-ex.ico",
    "128": "repl-ex.ico"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "index.html",
        "manifest.json",
        "repl-ex.ico",
        "vite.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open/Close repl-ex"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
